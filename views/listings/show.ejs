        </div>
      <%}%>



        <div class="row my-3">
        <div class="col-12 col-md-8 mx-auto">
          <h3>Where you'll be!!</h3>
           
          <div id="map" style="width: 100%; height: 300px"></div>
        
        <script>
    //  Use coordinates from listing
     const coords = <%- JSON.stringify(listing.geometry?.coordinates || [0,0]) %>;
  const lat = coords[1];
  const lon = coords[0];

  console.log("Lat:", lat, "Lon:", lon);

    const map = L.map('map').setView([lat, lon], 9);

    //  Use OpenStreetMap tiles 
    L.maplibreGL({
      style: 'https://tiles.openfreemap.org/styles/bright'
    }).addTo(map);

    // Add marker
    L.marker([lat, lon])
      .addTo(map)
      .bindPopup("<%= listing.location %>, <%= listing.country %>")
      .openPopup();
</script>
          </div>
          </div>

    
  

  






<div class="row my-3">
<div class="col-12 col-md-8 mx-auto"> 
<form action="/book/<%= listing._id %>" method="POST" id="bookingForm" class="p-3 border rounded bg-light shadow-sm">
  <h4>Book this place</h4>

  <div class="mb-3">
    <label class="form-label">Check-in:</label>
    <input type="date" name="checkIn" id="checkIn" class="form-control" required>
  </div>

  <div class="mb-3">
    <label class="form-label">Check-out:</label>
    <input type="date" name="checkOut" id="checkOut" class="form-control" required>
  </div>

  <div class="mb-3 p-2 bg-white rounded shadow-sm">
    <strong>Total Price:</strong>
    <span id="totalPrice" class="text-success fs-5">Rs0</span>
  </div>

  <div>
  <button type="submit" class="btn btn-primary w-100">Book Now (Cash on Delivery)</button>
  </div>
</form>
</div>
</div>

<script>
  const pricePerNight = <%= listing.price %>; // Price from DB
  const checkInInput = document.getElementById("checkIn");
  const checkOutInput = document.getElementById("checkOut");
  const totalPriceSpan = document.getElementById("totalPrice");

  function calculatePrice() {
    const checkIn = new Date(checkInInput.value);
    const checkOut = new Date(checkOutInput.value);

    if (checkIn && checkOut && checkOut > checkIn) {
      const diffTime = checkOut - checkIn;
      const nights = diffTime / (1000 * 60 * 60 * 24); // days between
      const total = nights * pricePerNight;
      totalPriceSpan.textContent = `Rs${total}`;
    } else {
      totalPriceSpan.textContent = "Rs0";
    }
  }

  checkInInput.addEventListener("change", calculatePrice);
  checkOutInput.addEventListener("change", calculatePrice);
</script>


    


    </div>

<script src="/js/script.js"></script>
    
    
</body>
